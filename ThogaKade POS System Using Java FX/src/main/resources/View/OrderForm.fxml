<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="699.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.order.OrderFormController">
   <children>
      <!-- Title -->
      <Label layoutX="304.0" layoutY="44.0" style="-fx-font-weight: bold; -fx-font-size: 24px; -fx-text-fill: #2C3E50;" text="Order Form" />

      <!-- Date and Time -->
      <Label layoutX="105.0" layoutY="101.0" style="-fx-font-size: 16px; -fx-text-fill: #7F8C8D;" text="Date:" />
      <Label fx:id="nowDateLbl" layoutX="184.0" layoutY="101.0" style="-fx-font-size: 16px; -fx-text-fill: #34495E;" text="Now Date" />
      <Label layoutX="347.0" layoutY="103.0" style="-fx-font-size: 16px; -fx-text-fill: #7F8C8D;" text="Time:" />
      <Label fx:id="nowTimeLbl" layoutX="400.0" layoutY="103.0" style="-fx-font-size: 16px; -fx-text-fill: #34495E;" text="Now Time" />

      <!-- Order ID -->
      <Label layoutX="104.0" layoutY="133.0" style="-fx-font-size: 16px; -fx-text-fill: #7F8C8D;" text="Order ID:" />
      <Label fx:id="orderIdlbl" layoutX="183.0" layoutY="133.0" style="-fx-font-size: 16px; -fx-text-fill: #34495E;" text="Order ID" />

      <!-- Customer Info -->
      <Label layoutX="104.0" layoutY="166.0" style="-fx-font-size: 16px; -fx-text-fill: #7F8C8D;" text="Customer ID:" />
      <Label layoutX="340.0" layoutY="165.0" style="-fx-font-size: 16px; -fx-text-fill: #7F8C8D;" text="Customer Name:" />
      <Label fx:id="customerNameLbl" layoutX="478.0" layoutY="166.0" style="-fx-font-size: 16px; -fx-text-fill: blue;" text="Customer Name" />
      <ComboBox fx:id="customerComboBox" layoutX="203.0" layoutY="161.0" onAction="#customerComboxOnAction" prefHeight="28.0" prefWidth="107.0" style="-fx-font-size: 14px; -fx-border-radius: 5px;" />

      <!-- Item Info -->
      <Label layoutX="74.0" layoutY="205.0" style="-fx-font-size: 16px; -fx-text-fill: #7F8C8D;" text="Item Code" />
      <Label layoutX="218.0" layoutY="208.0" style="-fx-font-size: 16px; -fx-text-fill: #7F8C8D;" text="Description" />
      <Label layoutX="345.0" layoutY="210.0" style="-fx-font-size: 16px; -fx-text-fill: #7F8C8D;" text="Unit Price" />
      <Label layoutX="454.0" layoutY="210.0" style="-fx-font-size: 16px; -fx-text-fill: #7F8C8D;" text="Qty On Hand" />
      <Label layoutX="588.0" layoutY="209.0" style="-fx-font-size: 16px; -fx-text-fill: #7F8C8D;" text="Qty" />

      <!-- Item Input Fields -->
      <ComboBox fx:id="itemComboBox1" layoutX="70.0" layoutY="241.0" onAction="#itemComboxOnAction" prefHeight="28.0" prefWidth="95.0" style="-fx-font-size: 14px; -fx-border-radius: 5px;" />
      <TextField fx:id="itemDesctxtField" layoutX="183.0" layoutY="238.0" prefHeight="26.0" prefWidth="145.0" style="-fx-font-size: 14px; -fx-border-radius: 5px;" />
      <TextField fx:id="itemPricetxtField" layoutX="336.0" layoutY="238.0" prefHeight="26.0" prefWidth="95.0" style="-fx-font-size: 14px; -fx-border-radius: 5px;" />
      <TextField fx:id="itemQtyOnHandtxtField" layoutX="449.0" layoutY="238.0" prefHeight="26.0" prefWidth="95.0" style="-fx-font-size: 14px; -fx-border-radius: 5px;" />
      <TextField fx:id="itemQtytxtField" layoutX="564.0" layoutY="239.0" prefHeight="26.0" prefWidth="75.0" style="-fx-font-size: 14px; -fx-border-radius: 5px;" />

      <!-- Order Table -->
      <TableView fx:id="orderTable" layoutX="70.0" layoutY="336.0" prefHeight="200.0" prefWidth="579.0" style="-fx-background-color: #ECF0F1; -fx-border-color: #BDC3C7; -fx-border-radius: 5px;">
         <columns>
            <TableColumn fx:id="orderIdcol" prefWidth="70.0" text="Code" />
            <TableColumn fx:id="descCol" prefWidth="121.6" text="Description" />
            <TableColumn fx:id="qtyCol" prefWidth="143.2" text="Qty" />
            <TableColumn fx:id="unitPriceCol" prefWidth="122.4" text="Unit Price" />
            <TableColumn fx:id="totalCol" prefWidth="124.8" text="Total" />
         </columns>
      </TableView>

      <!-- Buttons -->
      <Button layoutX="213.0" layoutY="282.0" mnemonicParsing="false" onAction="#btnAddOnAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5px;" text="Add" />
      <Button layoutX="322.0" layoutY="282.0" mnemonicParsing="false" onAction="#btnRemoveOnAction" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5px;" text="Remove" />
      <Button layoutX="449.0" layoutY="282.0" mnemonicParsing="false" onAction="#btnPlaceOrderOnAction" style="-fx-background-color: #008CBA; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5px;" text="Place Order" />

      <!-- Total -->
      <Label layoutX="556.0" layoutY="47.0" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #2C3E50;" text="TOTAL" />
      <Label fx:id="TotalTxt" layoutX="550.0" layoutY="71.0" style="-fx-font-size: 16px; -fx-text-fill: red;" text="Now Total" />
   </children>
</AnchorPane>
