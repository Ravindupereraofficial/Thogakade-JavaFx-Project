<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="600.0" prefWidth="699.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.order.OrderFormController">
   <children>
      <!-- Header Section -->
      <Rectangle arcHeight="10.0" arcWidth="10.0" fill="#34495e" height="70.0" layoutX="0.0" layoutY="0.0" stroke="BLACK" strokeType="INSIDE" width="699.0" />
      <Label layoutX="243.0" layoutY="17.0" style="-fx-font-weight: bold; -fx-font-size: 24px; -fx-font-family: 'Arial';" text="Order Management" textFill="WHITE" />

      <!-- Date and Time -->
      <Label layoutX="20.0" layoutY="90.0" style="-fx-font-size: 14px; -fx-font-family: 'Arial';" text="Date:" />
      <Label fx:id="nowDateLbl" layoutX="80.0" layoutY="90.0" style="-fx-font-size: 14px; -fx-font-family: 'Arial';" text="Current Date" />
      <Label layoutX="200.0" layoutY="90.0" style="-fx-font-size: 14px; -fx-font-family: 'Arial';" text="Time:" />
      <Label fx:id="nowTimeLbl" layoutX="250.0" layoutY="90.0" style="-fx-font-size: 14px; -fx-font-family: 'Arial';" text="Current Time" />

      <!-- Order ID -->
      <Label layoutX="20.0" layoutY="130.0" style="-fx-font-size: 14px; -fx-font-family: 'Arial';" text="Order ID:" />
      <Label fx:id="orderIdlbl" layoutX="100.0" layoutY="130.0" style="-fx-font-size: 14px; -fx-font-family: 'Arial';" text="ORD-001" />

      <!-- Customer Information -->
      <Label layoutX="20.0" layoutY="170.0" style="-fx-font-size: 14px; -fx-font-family: 'Arial';" text="Customer ID:" />
      <ComboBox fx:id="customerComboBox" layoutX="120.0" layoutY="165.0" onAction="#customerComboxOnAction" prefWidth="140.0" />
      <Label layoutX="300.0" layoutY="170.0" style="-fx-font-size: 14px; -fx-font-family: 'Arial';" text="Customer Name:" />
      <Label fx:id="customerNameLbl" layoutX="420.0" layoutY="170.0" style="-fx-font-size: 14px; -fx-font-family: 'Arial';" text="Customer Name" />

      <!-- Item Details -->
      <Label layoutX="20.0" layoutY="210.0" style="-fx-font-size: 14px; -fx-font-family: 'Arial';" text="Item Code" />
      <Label layoutX="120.0" layoutY="210.0" style="-fx-font-size: 14px; -fx-font-family: 'Arial';" text="Description" />
      <Label layoutX="270.0" layoutY="210.0" style="-fx-font-size: 14px; -fx-font-family: 'Arial';" text="Unit Price" />
      <Label layoutX="370.0" layoutY="210.0" style="-fx-font-size: 14px; -fx-font-family: 'Arial';" text="Qty on Hand" />
      <Label layoutX="500.0" layoutY="210.0" style="-fx-font-size: 14px; -fx-font-family: 'Arial';" text="Qty" />

      <ComboBox fx:id="itemComboBox1" layoutX="20.0" layoutY="240.0" onAction="#itemComboxOnAction" prefWidth="80.0" />
      <TextField fx:id="itemDesctxtField" layoutX="120.0" layoutY="240.0" prefWidth="130.0" />
      <TextField fx:id="itemPricetxtField" layoutX="270.0" layoutY="240.0" prefWidth="80.0" />
      <TextField fx:id="itemQtyOnHandtxtField" layoutX="370.0" layoutY="240.0" prefWidth="80.0" />
      <TextField fx:id="itemQtytxtField" layoutX="500.0" layoutY="240.0" prefWidth="80.0" />

      <!-- Table View -->
      <TableView fx:id="orderTable" layoutX="20.0" layoutY="300.0" prefHeight="200.0" prefWidth="660.0" style="-fx-border-color: #CCCCCC;">
         <columns>
            <TableColumn fx:id="orderIdcol" prefWidth="100.0" text="Code" />
            <TableColumn fx:id="descCol" prefWidth="150.0" text="Description" />
            <TableColumn fx:id="qtyCol" prefWidth="100.0" text="Qty" />
            <TableColumn fx:id="unitPriceCol" prefWidth="150.0" text="Unit Price" />
            <TableColumn fx:id="totalCol" prefWidth="150.0" text="Total" />
         </columns>
      </TableView>

      <!-- Buttons -->
      <Button layoutX="160.0" layoutY="520.0" onAction="#btnAddOnAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-family: 'Arial';" text="Add" />
      <Button layoutX="260.0" layoutY="520.0" onAction="#btnRemoveOnAction" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-family: 'Arial';" text="Remove" />
      <Button layoutX="360.0" layoutY="520.0" onAction="#btnPlaceOrderOnAction" style="-fx-background-color: #008CBA; -fx-text-fill: white; -fx-font-family: 'Arial';" text="Place Order" />

      <!-- Total -->
      <Label layoutX="500.0" layoutY="520.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-family: 'Arial';" text="Total:" />
      <Label fx:id="TotalTxt" layoutX="560.0" layoutY="520.0" style="-fx-font-size: 16px; -fx-font-family: 'Arial';" text="0.00" />
   </children>
</AnchorPane>
