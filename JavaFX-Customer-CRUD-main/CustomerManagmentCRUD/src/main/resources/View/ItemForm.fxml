<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="484.0" prefWidth="633.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Item.ItemFromController">
   <children>
      <!-- Header Section -->
      <Rectangle arcHeight="10.0" arcWidth="10.0" fill="#34495e" height="72.0" stroke="BLACK" strokeType="INSIDE" width="633.0" />
      <Label layoutX="235.0" layoutY="23.0" text="Item Management" textFill="WHITE">
         <font>
            <Font name="Segoe UI Semibold" size="24.0" />
         </font>
      </Label>

      <!-- Input Fields -->
      <TextField fx:id="itemId" layoutX="136.0" layoutY="109.0" promptText="Item ID" style="-fx-background-radius: 5; -fx-padding: 5;" />
      <TextField fx:id="itemName" layoutX="430.0" layoutY="109.0" promptText="Item Name" style="-fx-background-radius: 5; -fx-padding: 5;" />
      <TextField fx:id="itemPrice" layoutX="136.0" layoutY="147.0" promptText="Item Price" style="-fx-background-radius: 5; -fx-padding: 5;" />
      <TextField fx:id="itemQty" layoutX="430.0" layoutY="147.0" promptText="Quantity" style="-fx-background-radius: 5; -fx-padding: 5;" />

      <!-- Labels -->
      <Label layoutX="42.0" layoutY="113.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Item ID:" />
      <Label layoutX="41.0" layoutY="151.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Item Price:" />
      <Label layoutX="319.0" layoutY="113.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Item Name:" />
      <Label layoutX="320.0" layoutY="151.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Qty on Hand:" />

      <!-- Action Buttons -->
      <Button layoutX="304.0" layoutY="186.0" mnemonicParsing="false" onAction="#searchItemOnAction" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Search" />
      <Button layoutX="368.0" layoutY="186.0" mnemonicParsing="false" onAction="#updateItemOnAction" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Update" />
      <Button layoutX="430.0" layoutY="186.0" mnemonicParsing="false" onAction="#deleteItemOnAction" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Delete" />
      <Button layoutX="490.0" layoutY="186.0" mnemonicParsing="false" onAction="#addItemOnAction" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Add" />
      <Button layoutX="539.0" layoutY="186.0" mnemonicParsing="false" onAction="#viewItemOnAction" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="View" />

      <!-- Table -->
      <TableView fx:id="tblCustomer" layoutX="25.0" layoutY="256.0" prefHeight="221.0" prefWidth="589.0" style="-fx-background-color: white; -fx-border-color: #dcdde1; -fx-border-radius: 5;">
         <columns>
            <TableColumn fx:id="itemIdCol" prefWidth="127.2" style="-fx-alignment: CENTER;" text="Item ID" />
            <TableColumn fx:id="itemDescCol" prefWidth="152.0" style="-fx-alignment: CENTER;" text="Item Description" />
            <TableColumn fx:id="itemPriceCol" prefWidth="129.6" style="-fx-alignment: CENTER;" text="Item Price" />
            <TableColumn fx:id="itemQtyCol" prefWidth="148.0" style="-fx-alignment: CENTER;" text="Qty on Hand" />
         </columns>
      </TableView>
   </children>
</AnchorPane>
